<?xml version="1.0"?>
<block>
  <name>Complex To Mag Deg</name>
  <key>digitizers_block_complex_to_mag_deg</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.block_complex_to_mag_deg($vec_size)</make>
  
  <param>
    <name>Vector size</name>
    <key>vec_size</key>
    <value>1</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$vec_size</vlen>
  </sink>

  <source>
    <name>mag</name>
    <type>float</type>
    <vlen>$vec_size</vlen>
  </source>
  <source>
    <name>phase</name>
    <type>float</type>
    <vlen>$vec_size</vlen>
  </source>
</block>
