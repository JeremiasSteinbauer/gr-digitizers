<?xml version="1.0"?>
<block>
  <name>Post-Mortem Sink</name>
  <key>digitizers_post_mortem_sink</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.post_mortem_sink($signal_name, $signal_unit, $buffer_size)
  </make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Signal Name</name>
    <key>signal_name</key>
    <value>Signal_name</value>
    <type>string</type>
  </param>
  <param>
    <name>Signal Unit</name>
    <key>signal_unit</key>
    <value>u.a.</value>
    <type>string</type>
  </param>
  <param>
    <name>Buffer size</name>
    <key>buffer_size</key>
    <value>100000</value>
    <type>int</type>
  </param>

  <sink>
    <name>values</name>
    <type>float</type>
  </sink>
  <sink>
    <name>errors</name>
    <type>float</type>
    <optional>True</optional>
  </sink>
  
  <source>
    <name>values</name>
    <type>float</type>
  </source>
  <source>
    <name>errors</name>
    <type>float</type>
    <optional>True</optional>
  </source>
</block>
