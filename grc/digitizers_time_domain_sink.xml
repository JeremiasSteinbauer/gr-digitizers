<?xml version="1.0"?>
<block>
  <name>Time Sink</name>
  <key>digitizers_time_domain_sink</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.time_domain_sink($signal_name, $signal_unit, $samp_rate, $output_package_size, $acquisition_type)
  
  if $acquisition_type == 0:
    self.$(id).set_samples($pre_samples, $post_samples)
    </make>
  
  <param>
    <name>Sample Rate (Hz)</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>float</type>    
  </param>
  <param>
    <name>Mode</name>
    <key>acquisition_type</key>
    <value>1</value>
    <type>int</type>
    <option>
        <name>Triggered</name>
        <key>0</key>
    </option>
    <option>
        <name>Streaming</name>
        <key>1</key>
    </option>
  </param>
  <param>
    <name>Signal Name</name>
    <key>signal_name</key>
    <type>string</type>
  </param>
  <param>
    <name>Signal Unit</name>
    <key>signal_unit</key>
    <value></value>
    <type>string</type>
  </param>
  <param>
    <name>Output Package Size</name>
    <key>output_package_size</key>
    <value>1024</value>
    <type>int</type>
    <hide>#if $acquisition_type() == 0 then 'all' else 'None'#</hide>
  </param>
  <param>
    <name>Pre-trigger Samples</name>
    <key>pre_samples</key>
    <value>pre_trigger_samples</value>
    <type>int</type>
    <hide>#if $acquisition_type() == 1 then 'all' else 'None'#</hide>
  </param>
  <param>
    <name>Post-trigger Samples</name>
    <key>post_samples</key>
    <value>trigger_samples-pre_trigger_samples</value>
    <type>int</type>
    <hide>#if $acquisition_type() == 1 then 'all' else 'None'#</hide>
  </param>
    <sink>
    <name>values</name>
    <type>float</type>
  </sink>
  <sink>
    <name>errors</name>
    <type>float</type>
    <optional>True</optional>
  </sink>
</block>
