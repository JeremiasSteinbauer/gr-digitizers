<?xml version="1.0"?>
<block>
  <name>Time Domain Sink</name>
  <key>digitizers_time_domain_sink</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.time_domain_sink($signal_name, $signal_unit, $buffer_size, $acquisition_type)</make>
  <param>
    <name>Mode</name>
    <key>acquisition_type</key>
    <value>0</value>
    <type>enum</type>
    <option>
        <name>Triggered</name>
        <key>0</key>
    </option>
    <option>
        <name>Streaming</name>
        <key>1</key>
    </option>
    <option>
        <name>Streaming Sequence</name>
        <key>2</key>
    </option>
    <option>
       <name>Snapshot</name>
       <key>3</key>
    </option>
  </param>
  <param>
    <name>Signal Name</name>
    <key>signal_name</key>
    <type>string</type>
  </param>
  <param>
    <name>Signal Unit</name>
    <key>signal_unit</key>
    <value></value>
    <type>string</type>
  </param>
  <param>
    <name>Buffer size</name>
    <key>buffer_size</key>
    <value>40000</value>
    <type>int</type>
    <hide>#if $acquisition_type() == 3 then 'all' else 'none'#</hide>
  </param>  

  <sink>
    <name>values</name>
    <type>float</type>
  </sink>
  <sink>
    <name>errors</name>
    <type>float</type>
    <optional>True</optional>
  </sink>
</block>
