<?xml version="1.0"?>
<block>
  <name>Time Sink</name>
  <key>digitizers_time_domain_sink</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.time_domain_sink($signal_name, $signal_unit, $samp_rate, $buffer_size, $nr_buffers, $acquisition_type)</make>
  
  <param>
    <name>Sample Rate (Hz)</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>float</type>    
  </param>
  <param>
    <name>Mode</name>
    <key>acquisition_type</key>
    <value>1</value>
    <type>enum</type>
    <option>
        <name>Triggered</name>
        <key>0</key>
    </option>
    <option>
        <name>Streaming</name>
        <key>1</key>
    </option>
  </param>
  <param>
    <name>Signal Name</name>
    <key>signal_name</key>
    <type>string</type>
  </param>
  <param>
    <name>Signal Unit</name>
    <key>signal_unit</key>
    <value></value>
    <type>string</type>
  </param>
  <param>
    <name>Buffer size</name>
    <key>buffer_size</key>
    <value>1024</value>
    <type>int</type>
  </param>  
  <param>
    <name>Nr Buffers</name>
    <key>nr_buffers</key>
    <value>16</value>
    <type>int</type>
  </param> 
  <sink>
    <name>values</name>
    <type>float</type>
  </sink>
  <sink>
    <name>errors</name>
    <type>float</type>
    <optional>True</optional>
  </sink>
</block>
