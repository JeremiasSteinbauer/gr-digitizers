        </option>
    </param>
    <param>
        <name>Trigger Once</name>
        <key>trigger_once</key>
        <value>False</value>
        <type>bool</type>
        <hide>#if $acquisition_mode() == 'Streaming' then 'all' else 'None'#</hide>
        <option>
            <name>Yes</name>
            <key>True</key>
        </option>
        <option>
            <name>No</name>
            <key>False</key>
        </option>
    </param>
    <param>
        <name>Nr Captures</name>
        <key>nr_waveforms</key>
        <value>5</value>
        <type>int</type>
        <hide>#if $acquisition_mode() == 'Streaming' then 'all' else 'None'#</hide>
    </param>
    <param>
        <name>Buffer Size</name>
        <key>buff_size</key>
        <value>8192</value>
        <type>int</type>
        <hide>#if $acquisition_mode() == 'Streaming' then 'None' else 'all'#</hide>
    </param>
    <param>
        <name>Nr. Buffers</name>
        <key>nr_buffers</key>
        <value>100</value>
        <type>int</type>
        <hide>#if $acquisition_mode() == 'Streaming' then 'None' else 'all'#</hide>
    </param>
    <param>
