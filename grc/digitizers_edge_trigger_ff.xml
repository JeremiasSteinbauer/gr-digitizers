<?xml version="1.0"?>
<block>
  <name>Edge Trigger (with UDP)</name>
  <key>digitizers_edge_trigger_ff</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.edge_trigger_ff($sampling, $lo, $hi, $initial_state, $send_udp, $host_list, $edge)</make>  
  <param>
    <name>Sample Rate (Hz)</name>
    <key>sampling</key>
    <value>samp_rate</value>
    <type>float</type>    
  </param>
  <param>
    <name>Edge</name>
    <key>edge</key>
    <value>1</value>
    <type>enum</type>
    <option>
        <name>Falling</name>
        <key>0</key>
    </option>
    <option>
        <name>Raising</name>
        <key>1</key>
    </option>
  </param>
  <param>
    <name>High Threshold</name>
    <key>hi</key>
    <value>2.0</value>
    <type>float</type>    
  </param>
  <param>
    <name>Low Threshold</name>
    <key>lo</key>
    <value>0.7</value>
    <type>float</type>    
  </param>
  <param>
    <name>Initial</name>
    <key>initial_state</key>
    <value>0.0</value>
    <type>float</type>    
  </param>
  <param>
    <name>Send UDP</name>
    <key>send_udp</key>
    <value>1</value>
    <type>enum</type>
    <option>
        <name>No</name>
        <key>0</key>
    </option>
    <option>
        <name>Yes</name>
        <key>1</key>
    </option>
  </param>
  <param>
    <name>Hosts</name>
    <key>host_list</key>
    <value>localhost:2025</value>
    <type>string</type>
    <hide>#if $send_udp() == 0 then 'all' else 'none'#</hide>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
    <optional>True</optional>
  </source>
</block>
