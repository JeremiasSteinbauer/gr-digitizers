<?xml version="1.0"?>
<block>
  <name>B.6.1 Generic Chi-square based fitting</name>
  <key>digitizers_chi_square_fit</key>
  <category>[digitizers]</category>
  <import>import digitizers</import>
  <make>digitizers.chi_square_fit($num_samps, $function, $fun_u, $fun_l, $num_params, $par_names, $param_init, $param_err, $param_fit, $par_sp_u, $par_sp_l, $chi_sq)</make>

  <param>
    <name>Number of samples</name>
    <key>num_samps</key>
    <value>num_samples</value>
    <type>int</type>
  </param>

  <param>
    <name>Function</name>
    <key>function</key>
    <value>[0]*x +1.0*[1]</value>
    <type>string</type>
  </param>

  <param>
    <name>Function Upper bound</name>
    <key>fun_u</key>
    <value>num_samples</value>
    <type>float</type>
  </param>

  <param>
    <name>Function lower bound</name>
    <key>fun_l</key>
    <value>1</value>
    <type>float</type>
  </param>
  
  <param>
    <name>Number of parameters</name>
    <key>num_params</key>
    <value>2</value>
    <type>int</type>
  </param>

  <param>
    <name>Parameter names</name>
    <key>par_names</key>
    <value>gradient, offset</value>
    <type>string</type>
  </param>

  <param>
    <name>Parameter initial values</name>
    <key>param_init</key>
    <value>1.0, 0.5</value>
    <type>real_vector</type>
  </param>

  <param>
    <name>Parameter initial errors</name>
    <key>param_err</key>
    <value>0.0, 0.0</value>
    <type>real_vector</type>
  </param>

  <param>
    <name>Parameter fittable</name>
    <key>param_fit</key>
    <value>0</value>
    <type>string</type>
  </param>

  <param>
    <name>Search space low</name>
    <key>par_sp_l</key>
    <value>-30, -30</value>
    <type>real_vector</type>
  </param>

  <param>
    <name>Search space up</name>
    <key>par_sp_u</key>
    <value>800, 1000</value>
    <type>real_vector</type>
  </param>
  
  <param>
    <name>Max chi2</name>
    <key>chi_sq</key>
    <value>0.001</value>
    <type>float</type>
  </param>
  
  


  <sink>
    <name>in</name>
	<type>float</type>
    <vlen>$num_samps</vlen>
  </sink>

  <source>
    <name>params</name>
	<type>float</type>
    <vlen>$num_params</vlen>
  </source>
  
  <source>
    <name>errors</name>
	<type>float</type>
    <vlen>$num_params</vlen>
  </source>
  
  <source>
    <name>chi sq.</name>
	<type>float</type>
  </source>
  
  <source>
    <name>param</name>
	<type>byte</type>
  </source>
</block>
